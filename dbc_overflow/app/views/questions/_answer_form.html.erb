<%= form_for :answer, url: question_answers_path(@question.id) do |f| %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title, :placeholder => "Title" %>
  </p>

  <p>
    <%= f.label :content %><br>
    <%= f.text_area :content, :placeholder => "Content"  %>
  </p>

  <p>
    <%= f.submit :placeholder => "Save Answer" %>
  </p>
<% end %>